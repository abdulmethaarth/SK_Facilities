<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">


    <LinearLayout
        android:layout_width="@dimen/height_120"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/card_view_top"
            android:gravity="bottom"
            android:layout_width="@dimen/height_100"
            android:layout_height="@dimen/height_90">

        <ImageView
            android:id="@+id/icon"
            android:padding="@dimen/margin_5"
            android:layout_marginTop="@dimen/font_10"
            android:layout_width="@dimen/height_90"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/my_gps_location"
            android:layout_marginBottom="@dimen/margin_3"/>

            <TextView
                android:id="@+id/name"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/label_gray_light"
                android:layout_marginBottom="@dimen/margin_5"
                android:textSize="14dp"
                android:text="bike" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>