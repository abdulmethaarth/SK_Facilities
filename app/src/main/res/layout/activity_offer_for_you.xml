<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_light"
    tools:context=".activity.OfferForYouActivity">

    <RelativeLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_60"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/layout_back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="@dimen/margin_15"
            android:paddingLeft="@dimen/margin_15">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/navigation_arrow"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>


        <TextView
            android:id="@+id/txt_track_truck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FOR YOU"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/font_20"
            android:textColor="@color/black"/>


        <!--<RelativeLayout
            android:id="@+id/rl_info"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="@dimen/margin_15"
            android:paddingLeft="@dimen/margin_15"
            android:layout_alignParentRight="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="T&amp;C"
                android:textStyle="bold"
                android:textColor="@color/green"
                android:textSize="12dp"
                android:layout_centerVertical="true"
                />-->
        </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:background="@drawable/toolbar_dropshadow"
        android:layout_below="@id/layout_header"
        android:layout_height="4dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <ImageView
        android:layout_marginLeft="@dimen/font_10"
        android:layout_marginRight="@dimen/font_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_300"
        android:src="@drawable/sk_black_banner"/>

    <ImageView
        android:layout_marginLeft="@dimen/font_10"
        android:layout_marginRight="@dimen/font_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_300"
        android:src="@drawable/sk_insur_banner"/>


    <ImageView
        android:layout_marginLeft="@dimen/font_10"
        android:layout_marginRight="@dimen/font_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_300"
        android:layout_marginBottom="@dimen/font_10"
        android:src="@drawable/sk_earn_banner"/>
        </LinearLayout>
    </ScrollView>
    </LinearLayout>

</LinearLayout>
