<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:card_view="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:gravity="center"
        android:orientation="vertical">


        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_height="wrap_content"
            android:layout_width="180dp"
            card_view:cardMaxElevation="6dp"
            card_view:cardElevation="4dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/font_10"
            android:layout_margin="@dimen/margin_2"
            card_view:cardCornerRadius="@dimen/font_10"
            android:id="@+id/card_view_top">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="right"
                android:src="@drawable/info_gray"/>

            <LinearLayout
                android:layout_marginTop="@dimen/font_20"
                android:layout_marginBottom="@dimen/margin_5"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/height_50"
                    android:layout_height="@dimen/height_50"
                    android:src="@drawable/empty_car_icon"/>

                    <LinearLayout
                        android:layout_marginLeft="@dimen/margin_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                    <ImageView
                        android:layout_marginLeft="@dimen/margin_5"
                        android:layout_width="@dimen/font_15"
                        android:layout_height="@dimen/font_15"
                        android:src="@drawable/time_clock"/>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/aa"
                        android:layout_marginLeft="@dimen/margin_3"
                        android:text="2 Hours"
                        android:textSize="@dimen/font_14"
                        android:drawablePadding="2dp"
                        android:background="@drawable/strikethrough_shape"
                        android:textColor="#237E3A"
                        />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_5"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:id="@+id/off_price"
                                android:text="₹190"
                                android:drawablePadding="2dp"
                                android:textSize="12dp"
                                android:textColor="@color/black"
                                />

                            <TextView
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:id="@+id/final_price"
                                android:text="₹190"
                                android:layout_marginLeft="@dimen/margin_5"
                                android:drawablePadding="2dp"
                                android:textSize="12dp"
                                android:textColor="@color/black"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/hours_txt"
                   android:layout_gravity="center_horizontal"
                    android:text="$1.5/min post 2HOURS"
                    android:drawablePadding="2dp"
                    android:textSize="12dp"
                    android:textColor="@color/grey_drk"
                    />

            </LinearLayout>



        </android.support.v7.widget.CardView>
    </LinearLayout>

</LinearLayout>