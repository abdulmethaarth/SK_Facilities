<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">



    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/height_50"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/your_ticket_prime"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/height_25"/>

        <ImageView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_100"
            android:src="@drawable/prime_ex_card"/>

    </LinearLayout>


    <TextView
        android:layout_below="@+id/header"
        android:layout_marginLeft="@dimen/height_25"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ongoing Benifits"
        android:layout_marginTop="@dimen/height_50"
        android:textSize="@dimen/font_18"
        android:textColor="@color/pass_gray_light"/>


    <LinearLayout
        android:layout_above="@+id/terms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/height_50"
        android:gravity="center"
        android:layout_marginBottom="@dimen/font_10"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/font_10"
            android:src="@drawable/trust_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apply promocode"
            android:drawablePadding="@dimen/font_10"
            android:textSize="22dp"
            android:gravity="center"/>

    </LinearLayout>

    <TextView
        android:layout_marginBottom="@dimen/font_10"
        android:layout_above="@+id/prime"
        android:id="@+id/terms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Not Applicable on Outstation drivers* \nTerms &amp; Conditions"
        android:drawablePadding="@dimen/font_10"
        android:gravity="center"/>

    <TextView
        android:layout_above="@+id/bottom_navigation"
        android:id="@+id/prime"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/black"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:text="Get S. K. Facilities Black at â‚¹0.00"
        android:drawablePadding="@dimen/font_10"
        android:gravity="center"/>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@drawable/selector"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_nav_menu"/>
</RelativeLayout>


