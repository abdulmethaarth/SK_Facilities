<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:card_view="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="@dimen/height_120"
        android:layout_marginTop="@dimen/margin_10"
        android:gravity="center"
        android:orientation="vertical">


        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_height="@dimen/height_60"
            android:layout_width="@dimen/height_60"
            card_view:cardMaxElevation="6dp"
            card_view:cardElevation="4dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_2"
            card_view:contentPadding="10dp"
            card_view:cardCornerRadius="@dimen/height_100"
            android:id="@+id/card_view_top">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/hours_txt"
        android:layout_gravity="center"
        android:text="1.5"
        android:textSize="@dimen/height_25"
        />

</android.support.v7.widget.CardView>
</LinearLayout>

</LinearLayout>